 WITH preps AS (SELECT Segment_id, id_offset, content FROM bnc1.prepared_segment WHERE Segment_id = ANY(:sids)),
    meta AS (SELECT
    "Segment"."segment_id" AS "Segment_id", "Segment"."char_range" AS "Segment_char_range", "Document"."document_id" AS "Document_id", "Document"."char_range" AS "Document_char_range", "Document"."meta"::jsonb AS "Document_meta"
FROM
    preps
    LEFT JOIN "bnc1"."segmentrest" "Segment" ON "Segment"."segment_id" = preps."segment_id"
    LEFT JOIN "bnc1"."document" "Document" ON "Document"."char_range" @> "Segment"."char_range"
GROUP BY
    "Segment"."segment_id", "Document"."document_id", "Document"."meta"::jsonb)
SELECT -1::int2 AS rstype, jsonb_build_array(preps.segment_id, preps.id_offset, preps.content) FROM preps
UNION ALL
SELECT -2::int2 AS rstype, jsonb_build_array(meta."Segment_id", meta."Segment_char_range", meta."Document_id", meta."Document_char_range", meta."Document_meta") FROM meta;