Document d
    classCode = /^S/

Segment@d s

Token t3
    xpos2 = "SUBST"

set prox
    Token tx
        position(prox) > position(t3) - 20
        position(prox) < position(t3) + 20
        tx != t3

kwic => plain
    context
        s
    entities
        t3

results3 => collocation
    space
        prox
    attribute
        t2.form
